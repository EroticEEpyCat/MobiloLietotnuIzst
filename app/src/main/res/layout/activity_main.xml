<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/grade1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Atzīme 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/grade2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Atzīme 2"
        android:inputType="number" />

    <EditText
        android:id="@+id/grade3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Atzīme 3"
        android:inputType="number" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aprēķināt" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingTop="16dp" />

    <!-- Camera button -->
    <Button
        android:id="@+id/cameraButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nobildēt attēlu" />

    <!-- API section -->
    <TextView
        android:id="@+id/apiEndpointText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Endpoint: https://www.boredapi.com/api/activity?participants="
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <EditText
        android:id="@+id/participantsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ievadiet dalībnieku skaitu"
        android:inputType="number" />

    <Button
        android:id="@+id/fetchActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saņemt aktivitāti" />

    <TextView
        android:id="@+id/activityResultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="8dp" />

</LinearLayout>
